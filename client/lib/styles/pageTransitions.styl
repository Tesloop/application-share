.container
  animationFillMode both
  animationDuration 500ms
  animationTimingFunction ease

  &.sliding-from-right
    animationName slide-from-right

  &.sliding-to-right
    animationName slide-to-right

  &.sliding-to-left
    animationName slide-to-left

  &.sliding-from-left
    animationName slide-from-left

  &.sliding-to-bottom
    animationName slide-to-bottom
    z-index 100

  &.sliding-to-top
    animationName slide-to-top
    z-index 100

@-webkit-keyframes slide-from-right
  from
    transform translateX(100%)

@-webkit-keyframes slide-to-left
  to
    transform translateX(-100%)

@-webkit-keyframes slide-to-right
  to
    transform translateX(100%)

@-webkit-keyframes slide-from-left
  from
    transform translateX(-100%)

@-webkit-keyframes slide-to-top
  from
    opacity: 0
    transform translateY(15%)
  to
    opacity: 1
    transform translateY(0%)

@-webkit-keyframes slide-to-bottom
  from
    opacity: 1
    transform translateY(0%)
  to
    opacity: 0
    transform translateY(15%)

@-webkit-keyframes zoomInBounce
  from
    transform scale(0.7) translateY(-120px)
    opacity 0
  to
    transform scale(1) translateY(0)
    opacity 1

@-webkit-keyframes fadeIn
  from
    opacity 0
  to
    opacity 1
